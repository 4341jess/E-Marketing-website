@model  EMarketing.Models.tb1_category
@using PagedList.Mvc;
@using (Html.BeginForm("Create",
    "Admin",
    FormMethod.Post,
    new { enctype = "multipart/form-data" }))
{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login Form</title>
        <link rel="stylesheet" href="~/Content/StyleSheet1.css">
    </head>
    <body>
        <div class="container">
            <form id="loginForm">
                <h2>Category</h2>

                <table>

                    <tr>

                        <td>@Html.LabelFor(e => e.cat_name)</td>
                        <td>@Html.EditorFor(e => e.cat_name)</td>
                        <td> <span style="color:red">@Html.ValidationMessageFor(e => e.cat_name)</span></td>
                    </tr>
                    <tr>
                        <td>@Html.LabelFor(e => e.cat_image)</td>
                        <td><input type="file" name="imgfile" id="imgfile" class="form-control" required="required" /></td>
                    </tr>
                </table>


                <input type="submit" value="Add" />
                <p style="color:red">@ViewBag.error</p>
            </form>
        </div>
        <script src="~/Content/JavaScript.js"></script>
    </body>
</html>
}